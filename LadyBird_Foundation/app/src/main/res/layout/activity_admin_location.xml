<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminLocation"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/home">

    <ImageView
        android:id="@+id/alocation_image"
        android:layout_width="173dp"
        android:layout_height="166dp"
        app:srcCompat="@drawable/locations1"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/aLocation_address"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Physical Address"
        android:inputType="text"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="340dp" />

    <EditText
        android:id="@+id/aLocation_addressName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Address Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/alocation_saveBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="#932020"
        android:text="Save"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="416dp" />


</LinearLayout>