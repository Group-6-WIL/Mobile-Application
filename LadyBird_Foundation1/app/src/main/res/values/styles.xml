<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom DatePickerDialog theme -->
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Background color of the DatePicker -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>

    <!-- Style for DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Change the color of the header and calendar day selected -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:headerBackground">@android:color/holo_red_light</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:dayOfWeekBackground">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

</resources>
